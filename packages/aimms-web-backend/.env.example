# Database Configuration
DATABASE_URL=postgresql://aimms_user:dev@localhost:5432/aimms_web

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Secret
SECRET_KEY=your-secret-key-here-change-in-production

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# Mimecast SMTP Configuration
# NOTE: Mimecast relay requires campus network or approved external network
# For local development, use EMAIL_DEV_MODE=true (see below)
# Primary relay server
SMTP_HOST=usb-smtp-outbound-1.mimecast.com
# Secondary relay server (automatic failover)
SMTP_HOST_FALLBACK=usb-smtp-outbound-2.mimecast.com
# SMTP port (587 for StartTLS)
SMTP_PORT=587
# Service account username
SMTP_USERNAME=aidset@arizona.edu
# Mimecast Cloud password (NOT Active Directory password)
SMTP_PASSWORD=your-mimecast-cloud-password-here
# Sender email address
SMTP_FROM_EMAIL=aidset@arizona.edu
# Sender display name
SMTP_FROM_NAME=AIDSET
# Development mode - logs emails instead of sending (set to 'true' for local dev)
EMAIL_DEV_MODE=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Environment
ENVIRONMENT=development
