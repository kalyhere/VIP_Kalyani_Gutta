# Use Node.js 20 Alpine for development
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Create necessary directories
RUN mkdir -p audios

# Expose port
EXPOSE 3000

# Start development server with plain node (temporarily to debug module issues)
CMD ["node", "server.js"] 