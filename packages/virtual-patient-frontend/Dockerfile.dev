# Use Node.js 20 Alpine for development
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install --legacy-peer-deps

# Copy source code
COPY . .

# Expose port
EXPOSE 5174

# Start development server with Vite
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"] 